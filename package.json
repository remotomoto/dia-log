{
  "name": "dia-log",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "yarn test:android && yarn test:ios",
    "lint": "eslint ./src ./__mocks__",
    "lint:fix": "eslint ./src ./__mocks__ --fix",
    "test:android": "TEST_PLATFORM=android jest --detectOpenHandles --config jest.android.js",
    "test:ios": "DEBUG=false jest --detectOpenHandles --config jest.ios.js",
    "test:update:android": "TEST_PLATFORM=android jest -u --config jest.android.js",
    "test:update:ios": "jest -u --config jest.ios.js",
    "test:update": "yarn test:update:android && yarn test:update:ios",
    "test:watch": "jest --watchAll --config jest.ios.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-native-fontawesome": "^0.2.6",
    "@react-native-async-storage/async-storage": "^1.13.1",
    "@react-native-community/datetimepicker": "^3.0.4",
    "@react-native-community/google-signin": "^5.0.0",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-native-community/picker": "^1.8.1",
    "@react-native-firebase/app": "^8.4.6",
    "@react-native-firebase/auth": "^9.3.1",
    "@react-native-firebase/crashlytics": "^8.4.11",
    "@react-native-firebase/firestore": "^7.8.7",
    "@react-native-firebase/messaging": "^7.9.1",
    "@react-navigation/native": "^5.8.0",
    "@react-navigation/stack": "^5.10.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "i18n-js": "^3.8.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.31",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-native": "^0.63.3",
    "react-native-config": "^1.4.0",
    "react-native-device-info": "^7.0.2",
    "react-native-gesture-handler": "^1.8.0",
    "react-native-localize": "^1.4.2",
    "react-native-masked-text": "^1.13.0",
    "react-native-modal-datetime-picker": "^9.0.0",
    "react-native-safe-area-context": "^3.1.8",
    "react-native-screens": "^2.12.0",
    "react-native-splash-screen": "^3.2.0",
    "react-native-sqlite-storage": "^5.0.0",
    "react-native-svg": "^12.1.0",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-mock-store": "^1.5.4",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/format": "^11.0.0",
    "@react-native-community/eslint-config": "^1.1.0",
    "babel-jest": "^25.1.0",
    "commitlint": "^11.0.0",
    "eslint": "^6.5.1",
    "husky": "^4.3.0",
    "jest": "^25.1.0",
    "jest-prop-type-error": "^1.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "metro-react-native-babel-preset": "^0.59.0",
    "pretty-quick": "^3.1.0",
    "react-test-renderer": "16.13.1"
  },
  "jest": {
    "preset": "react-native"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged && yarn lint",
      "pre-push": "yarn test"
    }
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
